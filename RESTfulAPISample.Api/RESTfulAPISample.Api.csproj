<Project Sdk="Microsoft.NET.Sdk.Web">
  <ItemGroup>
    <ProjectReference Include="..\RESTfulAPISample.core\RESTfulAPISample.core.csproj"/>
    <ProjectReference Include="..\RESTfulAPISample.infrastructure\RESTfulAPISample.Infrastructure.csproj"/>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="AutoMapper" Version="9.0.0"/>
    <PackageReference Include="FluentValidation" Version="8.6.1"/>
    <PackageReference Include="FluentValidation.AspNetCore" Version="8.6.1"/>
    <PackageReference Condition="'$(ENABLERESPONSECACHE)' == 'True'" Include="Marvin.Cache.Headers" Version="4.1.0"/>
    <PackageReference Condition="'$(LOCALMEMORYCACHE)' == 'True' " Include="MessagePack" Version="2.0.323"/>
  </ItemGroup>
  <ItemGroup Condition="'$(ENABLEJWTAUTHENTICATION)' == 'True'">
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="3.1.1"/>
    <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="5.6.0"/>
  </ItemGroup>
  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>

    <!--  ↓ -->

    <DefineConstants>$(DefineConstants);DBINMEMORY</DefineConstants>
    <DBINMEMORY>True</DBINMEMORY>
    <ENABLERESPONSECACHE>False</ENABLERESPONSECACHE>
    <DISTRIBUTEDCACHE>False</DISTRIBUTEDCACHE>
    <ENABLEJWTAUTHENTICATION>False</ENABLEJWTAUTHENTICATION>
    <DefaultItemExcludes Condition="'$(ENABLEJWTAUTHENTICATION)' == 'False' ">$(DefaultItemExcludes);
    Services\**\TokenAuthenticationService.cs;
    Controllers\**\AuthenticationController.cs;</DefaultItemExcludes>
    
    <!-- ↑  -->

  </PropertyGroup>
</Project>