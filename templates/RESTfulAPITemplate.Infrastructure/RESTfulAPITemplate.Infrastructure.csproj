<Project Sdk="Microsoft.NET.Sdk">
  <ItemGroup>
    <ProjectReference Include="..\RESTfulAPITemplate.core\RESTfulAPITemplate.Core.csproj"/>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Condition="'$(OBSOLETESQLSERVER)' == 'True'" Include="Microsoft.EntityFrameworkCore" Version="2.2.6"/>
    <PackageReference Condition="'$(OBSOLETESQLSERVER)' == 'False'" Include="Microsoft.EntityFrameworkCore" Version="3.1.9"/>
  </ItemGroup>
  <ItemGroup Condition="'$(DBINMEMORY)' == 'True' ">
    <PackageReference Condition="'$(OBSOLETESQLSERVER)' == 'True'" Include="Microsoft.EntityFrameworkCore.InMemory" Version="2.2.6"/>
    <PackageReference Condition="'$(OBSOLETESQLSERVER)' == 'False'" Include="Microsoft.EntityFrameworkCore.InMemory" Version="3.1.9"/>
  </ItemGroup>
  <ItemGroup Condition="'$(MSSQL)' == 'True' OR '$(SCETIAAUTHENTICATION)' == 'True' ">
    <PackageReference Condition="'$(OBSOLETESQLSERVER)' == 'True'" Include="Microsoft.EntityFrameworkCore.SqlServer" Version="2.2.6"/>
    <PackageReference Condition="'$(OBSOLETESQLSERVER)' == 'False'" Include="Microsoft.EntityFrameworkCore.SqlServer" Version="3.1.9"/>
    <PackageReference Condition="'$(OBSOLETESQLSERVER)' == 'False'" Include="Microsoft.EntityFrameworkCore.Relational" Version="3.1.9"/>
    <PackageReference Condition="'$(OBSOLETESQLSERVER)' == 'False'" Include="Microsoft.EntityFrameworkCore.Design" Version="3.1.9"/>
  </ItemGroup>
  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <!--  ↓ -->
    <DefineConstants>$(DefineConstants);SCETIAAUTHENTICATION;DBINMEMORY;OBSOLETESQLSERVER;ENABLEJWTAUTHENTICATION;RESTFULAPIHELPER</DefineConstants>
    <MSSQL>False</MSSQL>
    <DBINMEMORY>True</DBINMEMORY>
    <OBSOLETESQLSERVER>True</OBSOLETESQLSERVER>
    <ENABLEJWTAUTHENTICATION>True</ENABLEJWTAUTHENTICATION>
    <RESTFULAPIHELPER>True</RESTFULAPIHELPER>
    <SCETIAAUTHENTICATION>True</SCETIAAUTHENTICATION>
    <DefaultItemExcludes Condition="'$(MSSQL)' == 'True' ">$(DefaultItemExcludes);DemoContextSeed.cs;</DefaultItemExcludes>
    <DefaultItemExcludes Condition="'$(ENABLEJWTAUTHENTICATION)' == 'False' ">$(DefaultItemExcludes);Repositories\**\UserRepository.cs</DefaultItemExcludes>
    <!-- ↑  -->
  </PropertyGroup>
</Project>